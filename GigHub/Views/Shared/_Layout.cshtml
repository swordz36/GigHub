                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsMenu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-link">
                        @Html.ActionLink("Add a Gig", "Create", "Gigs", null, new {@class = "nav-link"})
                    </li>
                </ul>
